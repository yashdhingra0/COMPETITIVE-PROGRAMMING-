YAHAN K GROUP BNANE HN UNKE ROATE KRNA HH
void reverse(int arr[], int n, int k) 
{ 
    for (int i = 0; i < n; i += k) 
    { 
        int left = i; 
  
        // to handle case when k is not multiple of n 
        int right = min(i + k - 1, n - 1); 
  
        // reverse the sub-array [left, right] 
        while (left < right) 
            swap(arr[left++], arr[right--]); 
  
    } 
} 
