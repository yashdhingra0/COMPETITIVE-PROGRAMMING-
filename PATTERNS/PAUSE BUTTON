#include <bits/stdc++.h>
#include <iostream>
using namespace std;
void solve(int n){
    for(int i=1;i<=2*n-1;i++){
        if(i<=n){
      for(int j=1;j<=i;j++){
            cout<<"*";
        }}
        else{
            for(int j=1;j<=2*n-i;j++){
            cout<<"*";
        }
            
        }
        cout<<endl;
    }
    
}

int main()
{
    int n;
    cin>>n;
    solve(n);
    return 0;
}
