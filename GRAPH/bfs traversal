#include <iostream>
#include <vector>
#include <queue> // Queue zaroori hai BFS ke liye
using namespace std;

// BFS Function
void bfs(int startNode, int V, vector<vector<int>> &adj) {
    // 1. Visited Array (0 = Not visited, 1 = Visited)
    vector<int> visited(V, 0);
    
    // 2. Queue banao
    queue<int> q;
    
    // 3. Start node ko push karo aur visited mark karo
    visited[startNode] = 1;
    q.push(startNode);
    
    cout << "BFS Traversal: ";

    while(!q.empty()) {
        // Line se sabse aage wale bande ko nikalo
        int node = q.front();
        q.pop();
        
        cout << node << " "; // Print kar diya

        // Ab iske saare neighbors check karo
        for(int neighbor : adj[node]) {
            if(!visited[neighbor]) {
                visited[neighbor] = 1; // Mark visited
                q.push(neighbor);      // Line (Queue) mein lagao
            }
        }
    }
    cout << endl;
}

int main() {
    int v = 5, e = 4;
    // Graph hardcode kar raha hun example ke liye
    // 0 -> 1, 0 -> 2, 1 -> 3, 1 -> 4
    vector<vector<int>> adj(v);
    
    // Edges add kar rahe hain
    adj[0] = {1, 2};
    adj[1] = {0, 3, 4};
    adj[2] = {0};
    adj[3] = {1};
    adj[4] = {1};

    // BFS call kar rahe hain starting from Node 0
    bfs(0, v, adj);

    return 0;
}
